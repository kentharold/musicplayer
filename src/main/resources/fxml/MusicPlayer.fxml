<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" onMouseDragged="#onMouseDragged"
           onMouseMoved="#onMouseMoved" onMousePressed="#onMousePressed" xmlns="http://javafx.com/javafx/8.0.66">
    <children>
        <BorderPane>
            <center>
                <ImageView fx:id="coverView" cache="true" cacheHint="SCALE" pickOnBounds="true"/>
            </center>
            <effect>
                <GaussianBlur/>
            </effect>
        </BorderPane>
        <VBox>
            <children>
                <HBox fx:id="titlebarHbox" alignment="CENTER_LEFT" onMouseClicked="#onMouseClicked"
                      onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed">
                    <children>
                        <Button fx:id="optionsButton" layoutX="457.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="control-button" text="Options">
                            <graphic>
                                <FontAwesomeIconView glyphName="COG"/>
                            </graphic>
                        </Button>
                        <Button layoutX="45.0" layoutY="15.0" mnemonicParsing="false" styleClass="control-button"
                                text="Monitoring">
                            <graphic>
                                <FontAwesomeIconView glyphName="TASKS"/>
                            </graphic>
                        </Button>
                        <Button layoutX="15.0" layoutY="15.0" mnemonicParsing="false" styleClass="control-button"
                                text="Info">
                            <graphic>
                                <FontAwesomeIconView glyphName="INFO_CIRCLE"/>
                            </graphic>
                        </Button>
                        <Button layoutX="45.0" layoutY="15.0" mnemonicParsing="false" styleClass="control-button"
                                text="Help">
                            <graphic>
                                <FontAwesomeIconView glyphName="QUESTION_CIRCLE"/>
                            </graphic>
                        </Button>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Music Player">
                            <graphic>
                                <FontAwesomeIconView glyphName="MUSIC" size="16"/>
                            </graphic>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="fullscreenButton" layoutX="609.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="control-button" text="Full Screen">
                            <graphic>
                                <FontAwesomeIconView glyphName="ARROWS_ALT"/>
                            </graphic>
                        </Button>
                        <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#onAction"
                                styleClass="control-button" text="Minimize">
                            <graphic>
                                <FontAwesomeIconView glyphName="MINUS_CIRCLE"/>
                            </graphic>
                        </Button>
                        <Button fx:id="maximizeButton" layoutX="489.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="control-button" text="Maximize">
                            <graphic>
                                <FontAwesomeIconView glyphName="PLUS_CIRCLE"/>
                            </graphic>
                        </Button>
                        <Button fx:id="closeButton" layoutX="550.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="control-button" text="Close">
                            <graphic>
                                <FontAwesomeIconView glyphName="TIMES_CIRCLE"/>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <Separator prefWidth="200.0"/>
                <StackPane VBox.vgrow="ALWAYS">
                    <children>
                        <StackPane fx:id="backgroundPane"/>
                        <VBox spacing="20.0">
                            <children>
                                <HBox id="mainArea" spacing="20.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <StackPane styleClass="container" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Region styleClass="container-bg"/>
                                                <VBox alignment="TOP_CENTER">
                                                    <children>
                                                        <TabPane tabClosingPolicy="UNAVAILABLE">
                                                            <tabs>
                                                                <Tab text="Tags">
                                                                    <content>
                                                                        <VBox>
                                                                            <children>
                                                                                <TableView fx:id="tagsView"
                                                                                           VBox.vgrow="ALWAYS">
                                                                                    <columns>
                                                                                        <TableColumn prefWidth="75.0"
                                                                                                     text="C1"/>
                                                                                        <TableColumn prefWidth="75.0"
                                                                                                     text="C2"/>
                                                                                    </columns>
                                                                                    <columnResizePolicy>
                                                                                        <TableView
                                                                                                fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                                                    </columnResizePolicy>
                                                                                </TableView>
                                                                            </children>
                                                                            <padding>
                                                                                <Insets top="5.0"/>
                                                                            </padding>
                                                                        </VBox>
                                                                    </content>
                                                                    <graphic>
                                                                        <FontAwesomeIconView glyphName="TAGS"/>
                                                                    </graphic>
                                                                </Tab>
                                                            </tabs>
                                                        </TabPane>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                        <StackPane styleClass="container" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Region styleClass="container-bg"/>
                                                <VBox spacing="10.0">
                                                    <children>
                                                        <HBox alignment="CENTER">
                                                            <children>
                                                                <Label contentDisplay="RIGHT" text="Play Queue">
                                                                    <graphic>
                                                                        <HBox alignment="CENTER_LEFT">
                                                                            <children>
                                                                                <Button fx:id="addDataButton"
                                                                                        mnemonicParsing="false"
                                                                                        onAction="#onAction"
                                                                                        styleClass="control-button"
                                                                                        text="Add">
                                                                                    <graphic>
                                                                                        <FontAwesomeIconView
                                                                                                glyphName="PLUS_SQUARE"/>
                                                                                    </graphic>
                                                                                </Button>
                                                                                <Button fx:id="removeDataButton"
                                                                                        layoutX="10.0" layoutY="10.0"
                                                                                        mnemonicParsing="false"
                                                                                        onAction="#onAction"
                                                                                        styleClass="control-button"
                                                                                        text="Remove">
                                                                                    <graphic>
                                                                                        <FontAwesomeIconView
                                                                                                glyphName="MINUS_SQUARE"/>
                                                                                    </graphic>
                                                                                </Button>
                                                                            </children>
                                                                        </HBox>
                                                                    </graphic>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                        <ListView fx:id="dataView" onDragDropped="#onDragDropped"
                                                                  onDragOver="#onDragOver" VBox.vgrow="ALWAYS"/>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                                <StackPane styleClass="container">
                                    <children>
                                        <Region styleClass="container-bg"/>
                                        <HBox id="control-area" alignment="CENTER_LEFT">
                                            <children>
                                                <Button fx:id="prevButton" mnemonicParsing="false" onAction="#onAction"
                                                        styleClass="control-button" text="Prev.">
                                                    <graphic>
                                                        <FontAwesomeIconView glyphName="STEP_BACKWARD"/>
                                                    </graphic>
                                                </Button>
                                                <ToggleButton id="play-button" fx:id="playToggleButton"
                                                              mnemonicParsing="false" onAction="#onAction"
                                                              styleClass="control-button" text="Play/Pause">
                                                    <graphic>
                                                        <FontAwesomeIconView glyphName="PLAY_CIRCLE"/>
                                                    </graphic>
                                                </ToggleButton>
                                                <Button fx:id="nextButton" layoutX="62.0" layoutY="10.0"
                                                        mnemonicParsing="false" onAction="#onAction"
                                                        styleClass="control-button" text="Next">
                                                    <graphic>
                                                        <FontAwesomeIconView glyphName="STEP_FORWARD"/>
                                                    </graphic>
                                                </Button>
                                                <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label fx:id="currentTimeLabel"/>
                                                        <Slider fx:id="durationSlider" HBox.hgrow="ALWAYS"/>
                                                        <Label fx:id="totalTimeLabel" layoutX="10.0" layoutY="24.0"/>
                                                    </children>
                                                </HBox>
                                                <ToggleButton id="volume-button" fx:id="muteToggleButton"
                                                              mnemonicParsing="false" onAction="#onAction"
                                                              styleClass="control-button" text="Mute">
                                                    <graphic>
                                                        <MaterialDesignIconView/>
                                                    </graphic>
                                                </ToggleButton>
                                                <Slider fx:id="volumeSlider" blockIncrement="0.1" max="1.0"/>
                                                <CheckBox id="repeat-checkbox" fx:id="repeatCheckBox"
                                                          allowIndeterminate="true" contentDisplay="GRAPHIC_ONLY"
                                                          mnemonicParsing="false" onAction="#onAction" text="Repeat">
                                                    <graphic>
                                                        <MaterialDesignIconView/>
                                                    </graphic>
                                                    <styleClass>
                                                        <String fx:value="control-button"/>
                                                        <String fx:value="control-checkbox"/>
                                                    </styleClass>
                                                </CheckBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </padding>
                                        </HBox>
                                    </children>
                                </StackPane>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </VBox>
                        <StackPane fx:id="overlayPane" visible="false">
                            <children>
                                <Region prefHeight="200.0" prefWidth="200.0" styleClass="busy"/>
                                <BorderPane fx:id="notifierContainer" maxHeight="-Infinity" maxWidth="-Infinity"
                                            styleClass="dialog-pane">
                                    <bottom>
                                        <ButtonBar fx:id="notifierButtonBar" BorderPane.alignment="CENTER"/>
                                    </bottom>
                                    <StackPane.margin>
                                        <Insets/>
                                    </StackPane.margin>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                    <top>
                                        <HBox fx:id="notifierHeader" BorderPane.alignment="CENTER">
                                            <children>
                                                <Label fx:id="notifierHeaderLabel"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                        </HBox>
                                    </top>
                                </BorderPane>
                            </children>
                        </StackPane>
                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</StackPane>
