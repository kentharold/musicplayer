<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" onMouseDragged="#onMouseDragged"
           onMouseMoved="#onMouseMoved" onMousePressed="#onMousePressed" xmlns="http://javafx.com/javafx/8.0.66">
    <children>
        <BorderPane>
            <center>
                <ImageView fx:id="coverView" cache="true" cacheHint="SCALE" pickOnBounds="true"/>
            </center>
            <effect>
                <GaussianBlur/>
            </effect>
        </BorderPane>
        <VBox>
            <children>
                <HBox fx:id="titlebarHbox" alignment="CENTER_LEFT" onMouseClicked="#onMouseClicked"
                      onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed">
                    <children>
                        <Button fx:id="optionsButton" layoutX="457.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="glyph-button" text="%Fxml.Options.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.Options.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.Options.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.Options.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button layoutX="45.0" layoutY="15.0" mnemonicParsing="false" styleClass="glyph-button"
                                text="%Fxml.Monitoring.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.Monitoring.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.Monitoring.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.Monitoring.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button layoutX="15.0" layoutY="15.0" mnemonicParsing="false" styleClass="glyph-button"
                                text="%Fxml.About.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.About.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.About.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.About.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button layoutX="45.0" layoutY="15.0" mnemonicParsing="false" styleClass="glyph-button"
                                text="%Fxml.Help.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.Help.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.Help.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.Help.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Music Player">
                            <graphic>
                                <StackPane>
                                    <children>
                                        <FontAwesomeIconView glyphName="CIRCLE_THIN" size="32"/>
                                        <FontAwesomeIconView glyphName="MUSIC" size="16"/>
                                    </children>
                                </StackPane>
                            </graphic>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="fullscreenButton" layoutX="609.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="glyph-button" text="%Fxml.FullScreen.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.FullScreen.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.FullScreen.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.FullScreen.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#onAction"
                                styleClass="glyph-button" text="%Fxml.Minimize.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.Minimize.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.Minimize.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.Minimize.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button fx:id="maximizeButton" layoutX="489.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="glyph-button" text="%Fxml.Maximize.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.Maximize.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.Maximize.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.Maximize.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                        <Button fx:id="closeButton" layoutX="550.0" layoutY="15.0" mnemonicParsing="false"
                                onAction="#onAction" styleClass="glyph-button" text="%Fxml.Close.name">
                            <graphic>
                                <FontAwesomeIconView glyphName="%Fxml.Close.icon"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="%Fxml.Close.description">
                                    <graphic>
                                        <FontAwesomeIconView glyphName="%Fxml.Close.icon"/>
                                    </graphic>
                                </Tooltip>
                            </tooltip>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <Separator prefWidth="200.0"/>
                <StackPane VBox.vgrow="ALWAYS">
                    <children>
                        <StackPane fx:id="backgroundPane"/>
                        <VBox spacing="20.0">
                            <children>
                                <HBox id="mainArea" spacing="20.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <StackPane styleClass="container" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Region styleClass="container-bg"/>
                                                <VBox alignment="TOP_CENTER">
                                                    <children>
                                                        <TabPane id="extraView" fx:id="tabView"
                                                                 tabClosingPolicy="UNAVAILABLE">
                                                            <tabs>
                                                                <Tab text="%Fxml.Tab.Metadata.name">
                                                                    <content>
                                                                        <VBox>
                                                                            <children>
                                                                                <TableView id="metadata-view"
                                                                                           fx:id="tagsView"
                                                                                           VBox.vgrow="ALWAYS">
                                                                                    <columns>
                                                                                        <TableColumn
                                                                                                fx:id="tagKeyColumn"
                                                                                                editable="false"
                                                                                                prefWidth="75.0"
                                                                                                sortable="false"/>
                                                                                        <TableColumn
                                                                                                fx:id="tagValueColumn"
                                                                                                editable="false"
                                                                                                prefWidth="75.0"
                                                                                                sortable="false"/>
                                                                                    </columns>
                                                                                    <columnResizePolicy>
                                                                                        <TableView
                                                                                                fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                                                    </columnResizePolicy>
                                                                                </TableView>
                                                                            </children>
                                                                            <padding>
                                                                                <Insets top="5.0"/>
                                                                            </padding>
                                                                        </VBox>
                                                                    </content>
                                                                    <graphic>
                                                                        <FontAwesomeIconView
                                                                                glyphName="%Fxml.Tab.Metadata.icon"/>
                                                                    </graphic>
                                                                    <tooltip>
                                                                        <Tooltip text="%Fxml.Tab.Metadata.description">
                                                                            <graphic>
                                                                                <FontAwesomeIconView
                                                                                        glyphName="%Fxml.Tab.Metadata.icon"/>
                                                                            </graphic>
                                                                        </Tooltip>
                                                                    </tooltip>
                                                                </Tab>
                                                            </tabs>
                                                        </TabPane>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                        <StackPane styleClass="container" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Region styleClass="container-bg"/>
                                                <VBox spacing="10.0">
                                                    <children>
                                                        <HBox alignment="CENTER">
                                                            <children>
                                                                <Label contentDisplay="RIGHT"
                                                                       text="%Fxml.DataView.title">
                                                                    <graphic>
                                                                        <HBox alignment="CENTER_LEFT">
                                                                            <children>
                                                                                <Button fx:id="addDataButton"
                                                                                        mnemonicParsing="false"
                                                                                        onAction="#onAction"
                                                                                        styleClass="glyph-button"
                                                                                        text="%Fxml.DataView.Add.name">
                                                                                    <graphic>
                                                                                        <FontAwesomeIconView
                                                                                                glyphName="%Fxml.DataView.Add.icon"/>
                                                                                    </graphic>
                                                                                    <tooltip>
                                                                                        <Tooltip
                                                                                                text="%Fxml.DataView.Add.description">
                                                                                            <graphic>
                                                                                                <FontAwesomeIconView
                                                                                                        glyphName="%Fxml.DataView.Add.icon"/>
                                                                                            </graphic>
                                                                                        </Tooltip>
                                                                                    </tooltip>
                                                                                </Button>
                                                                                <Button fx:id="removeDataButton"
                                                                                        layoutX="10.0" layoutY="10.0"
                                                                                        mnemonicParsing="false"
                                                                                        onAction="#onAction"
                                                                                        styleClass="glyph-button"
                                                                                        text="%Fxml.DataView.Remove.name">
                                                                                    <graphic>
                                                                                        <FontAwesomeIconView
                                                                                                glyphName="%Fxml.DataView.Remove.icon"/>
                                                                                    </graphic>
                                                                                    <tooltip>
                                                                                        <Tooltip
                                                                                                text="%Fxml.DataView.Remove.description">
                                                                                            <graphic>
                                                                                                <FontAwesomeIconView
                                                                                                        glyphName="%Fxml.DataView.Remove.icon"/>
                                                                                            </graphic>
                                                                                        </Tooltip>
                                                                                    </tooltip>
                                                                                </Button>
                                                                            </children>
                                                                        </HBox>
                                                                    </graphic>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                        <ListView fx:id="dataView" onDragDropped="#onDragDropped"
                                                                  onDragOver="#onDragOver" VBox.vgrow="ALWAYS"/>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                    </padding>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                                <StackPane styleClass="container">
                                    <children>
                                        <Region styleClass="container-bg"/>
                                        <HBox id="control-area" alignment="CENTER_LEFT">
                                            <children>
                                                <Button fx:id="prevButton" mnemonicParsing="false" onAction="#onAction"
                                                        styleClass="glyph-button" text="%Fxml.MediaControl.Prev.name">
                                                    <graphic>
                                                        <FontAwesomeIconView glyphName="%Fxml.MediaControl.Prev.icon"/>
                                                    </graphic>
                                                    <tooltip>
                                                        <Tooltip>
                                                            <graphic>
                                                                <FontAwesomeIconView
                                                                        glyphName="%Fxml.MediaControl.Prev.icon"/>
                                                            </graphic>
                                                        </Tooltip>
                                                    </tooltip>
                                                </Button>
                                                <ToggleButton id="play-button" fx:id="playToggleButton"
                                                              mnemonicParsing="false" onAction="#onAction"
                                                              styleClass="glyph-button"
                                                              text="%Fxml.MediaControl.PlayPause.name">
                                                    <graphic>
                                                        <FontAwesomeIconView glyphName="PLAY_CIRCLE"/>
                                                    </graphic>
                                                    <tooltip>
                                                        <Tooltip>
                                                            <graphic>
                                                                <FontAwesomeIconView fx:id="playPauseIconTooltip"/>
                                                            </graphic>
                                                        </Tooltip>
                                                    </tooltip>
                                                </ToggleButton>
                                                <Button fx:id="nextButton" layoutX="62.0" layoutY="10.0"
                                                        mnemonicParsing="false" onAction="#onAction"
                                                        styleClass="glyph-button" text="%Fxml.MediaControl.Next.name">
                                                    <graphic>
                                                        <FontAwesomeIconView glyphName="%Fxml.MediaControl.Next.icon"/>
                                                    </graphic>
                                                    <tooltip>
                                                        <Tooltip>
                                                            <graphic>
                                                                <FontAwesomeIconView
                                                                        glyphName="%Fxml.MediaControl.Next.icon"/>
                                                            </graphic>
                                                        </Tooltip>
                                                    </tooltip>
                                                </Button>
                                                <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label fx:id="currentTimeLabel" minWidth="-Infinity">
                                                            <tooltip>
                                                                <Tooltip/>
                                                            </tooltip>
                                                        </Label>
                                                        <Slider fx:id="durationSlider" onMouseMoved="#onMouseMoved"
                                                                HBox.hgrow="ALWAYS">
                                                            <tooltip>
                                                                <Tooltip/>
                                                            </tooltip>
                                                        </Slider>
                                                        <Label fx:id="totalTimeLabel" layoutX="10.0" layoutY="24.0"
                                                               minWidth="-Infinity">
                                                            <tooltip>
                                                                <Tooltip/>
                                                            </tooltip>
                                                        </Label>
                                                    </children>
                                                </HBox>
                                                <ToggleButton id="volume-button" fx:id="muteToggleButton"
                                                              mnemonicParsing="false" onAction="#onAction"
                                                              styleClass="glyph-button"
                                                              text="%Fxml.MediaControl.Mute.name">
                                                    <graphic>
                                                        <MaterialDesignIconView/>
                                                    </graphic>
                                                    <tooltip>
                                                        <Tooltip>
                                                            <graphic>
                                                                <MaterialDesignIconView/>
                                                            </graphic>
                                                        </Tooltip>
                                                    </tooltip>
                                                </ToggleButton>
                                                <Slider fx:id="volumeSlider" blockIncrement="0.1" max="1.0"
                                                        maxWidth="100.0" onMouseMoved="#onMouseMoved">
                                                    <tooltip>
                                                        <Tooltip/>
                                                    </tooltip>
                                                </Slider>
                                                <CheckBox id="repeat-checkbox" fx:id="repeatCheckBox"
                                                          allowIndeterminate="true" contentDisplay="GRAPHIC_ONLY"
                                                          mnemonicParsing="false" onAction="#onAction"
                                                          text="%Fxml.MediaControl.Repeat.name">
                                                    <graphic>
                                                        <MaterialDesignIconView/>
                                                    </graphic>
                                                    <styleClass>
                                                        <String fx:value="glyph-button"/>
                                                        <String fx:value="control-checkbox"/>
                                                    </styleClass>
                                                    <tooltip>
                                                        <Tooltip>
                                                            <graphic>
                                                                <MaterialDesignIconView/>
                                                            </graphic>
                                                        </Tooltip>
                                                    </tooltip>
                                                </CheckBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </padding>
                                        </HBox>
                                    </children>
                                </StackPane>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </VBox>
                        <StackPane id="overlay-pane" fx:id="overlayPane" visible="false">
                            <children>
                                <Region prefHeight="200.0" prefWidth="200.0" styleClass="busy"/>
                                <BorderPane fx:id="notifierContainer" maxHeight="-Infinity" maxWidth="-Infinity"
                                            styleClass="dialog-pane">
                                    <bottom>
                                        <ButtonBar fx:id="notifierButtonBar" BorderPane.alignment="CENTER"/>
                                    </bottom>
                                    <top>
                                        <HBox id="overlay-header" fx:id="notifierHeader" BorderPane.alignment="CENTER">
                                            <children>
                                                <Label id="overlay-title" fx:id="notifierHeaderLabel"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="10" left="10" right="10" top="10"/>
                                            </padding>
                                            <BorderPane.margin>
                                                <Insets bottom="10.0"/>
                                            </BorderPane.margin>
                                        </HBox>
                                    </top>
                                </BorderPane>
                            </children>
                        </StackPane>
                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</StackPane>
